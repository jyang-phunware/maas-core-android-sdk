<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.phunware.core.sample"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.phunware.core.sample.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.phunware.core.sample.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.phunware.core.sample.SecondActivity"
            android:label="@string/title_activity_second"
            android:parentActivityName="com.phunware.core.sample.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.phunware.core.sample.MainActivity" />
        </activity>

        <service
            android:name="LocalService"
            android:label="@string/service_local_service_name" >
        </service>
        <service
            android:name="AsyncService"
            android:label="@string/service_async_service_name" >
        </service>
    </application>

</manifest>